<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
 <div id="container">
    <div id="header">
        <h1>MIS RECETAS</h1>
    </div>
    <div id="menu">
        <ul>
            <li>
                @Html.ActionLink("Inicio", "Index", "Inicio")
            </li>
            <li>
                @Html.ActionLink("Receta", "Index", "Receta")
            </li>
        </ul>
     </div>

    <div id="content">
        @RenderBody()
    </div>
    <div id="sidebar">
        @if (IsSectionDefined("SideBar"))
        {
            @RenderSection("SideBar")
        }
        else
        {
            <h2>Zona Sidebar Fija</h2>
        }
    </div>
    <div id="footer">
        <p>misrecetas@web.com</p>
    </div>
    </div>
</body>
</html>